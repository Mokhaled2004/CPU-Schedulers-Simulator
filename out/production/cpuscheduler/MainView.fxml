<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.ComboBox?>

<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.MainController" hgap="10" vgap="10" style="-fx-padding: 20; -fx-background-color: #2f2f2f;">

    <columnConstraints>
        <ColumnConstraints percentWidth="33.33"/>
        <ColumnConstraints percentWidth="33.33"/>
        <ColumnConstraints percentWidth="33.33"/>
    </columnConstraints>

    <VBox fx:id="graphContainer" style="-fx-margin-left: 20px;" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <Label text="CPU Scheduling Graph" style="-fx-text-fill: red;"/>

        <Canvas fx:id="schedulingCanvas" width="800" height="400"/>
    </VBox>

    <VBox fx:id="processPropertiesContainer" style="-fx-margin-left: 20px;" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="2">
        <Label text="Process Properties" style="-fx-text-fill: red;"/>

        <GridPane fx:id="processTable" hgap="10" vgap="10" GridPane.rowIndex="1" GridPane.columnIndex="2">
            <Label text="PID" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label text="Priority" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Color" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Label text="Process # " style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <Label text="Name" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
        </GridPane>
    </VBox>

    <VBox fx:id="statisticsContainer" style="-fx-margin-left: 20px;" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="3">
        <Label text="Statistics" style="-fx-text-fill: red;"/>

        <Label fx:id="averageWaitingTimeLabel" text="Average Waiting Time: " style="-fx-text-fill: white;"/>
        <Label fx:id="averageTurnaroundTimeLabel" text="Average Turnaround Time: " style="-fx-text-fill: white;"/>
    </VBox>

    <Label fx:id="executionOrderLabel" text="Execution Order:" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="3" style="-fx-text-fill: white;"/>

    <VBox GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="3" style="-fx-margin-top: 20px;">
        <Label text="Select Scheduling Algorithm" style="-fx-text-fill: red;"/>
        <ComboBox fx:id="schedulerTypeComboBox" style="-fx-background-color: #333333; -fx-text-fill: white; -fx-border-color: red; -fx-border-width: 1px;"/>
    </VBox>

</GridPane>
